---
import astroLogo from "../assets/images/AstroMediaLogo.svg";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import logoImg from "../assets/images/fav.png";
import config from "../config.json";
---

<footer class="bg-black text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
      <div class="flex flex-col items-start">
        <Image src={logoImg} alt="logo" class="w-16 bg-white rounded-md mb-2" />
        <p class="text-sm">{config.businessName}</p>
      </div>

      <div>
        <h6 class="text-lg font-semibold mb-4">Services</h6>
        <ul class="space-y-2">
          {
            config.services.map((service) => (
              <li class="link link-hover ">
                <a href={service.url}>{service.name}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="flex flex-col justify-between">
        <div>
          <h6 class="text-lg font-semibold mb-4">Support</h6>
          <ul class="space-y-2">
            {
              config.support.map((supportItem: any) => (
                <li>
                  <a
                    class="text-sm hover:text-primary transition-colors duration-200"
                    href={supportItem.url}
                  >
                    {supportItem.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="mt-8" >
          <a href="/terms-and-conditions">
            <h6 class="text-sm font-semibold hover:underline">Terms & Conditions</h6>
          </a>
          
          
        </div>

        {
          config.socials && (
            <div class="mt-6">
              <h6 class="text-lg font-semibold mb-4">Socials</h6>
              <div class="flex space-x-4">
                {config.socials.map((social: any) => (
                  <a
                    class="hover:text-primary transition-colors duration-200"
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <Icon name={social.icon} class="text-2xl" />
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </div>
    </div>

    <div class="border-t border-white pt-8 mt-8 text-center">
      <p class="flex items-center justify-center gap-2 text-sm">
        Made possible by
        <a
          href="https://astromedia.dev"
          class="hover:text-accent transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
      {config.businessName}
        </a>
        <Image
          class="w-5"
          src={astroLogo}
          width={10}
          height={10}
          alt="digital agency"
        />
      </p>
    </div>
  </div>
</footer>
